#include <stdio.h>
#include <malloc.h>

int minmax(int*niz, int n, int(*op)(int, int))
{
	int i, temp;

	temp = *niz;
	for (i = 1; i < n; i++) {
		if (op(*(niz + i), temp)) {
			temp = *(niz + i);
		}
	}
	return temp;
}

int manjiod(int a, int b) 
{
	return (a < b) ? 1 : 0;
}

int veciod(int a, int b)
{
	return (a > b) ? 1 : 0;
}

int main()
{
	int n, i;
	char c;
	int* pniz;

	printf("Koliko clanova ima niz?\n");
	scanf("%d", &n);
	pniz =(int*) malloc(n * sizeof(int));
	for (i = 0; i < n; i++) {
		printf("Unesite %d. clan niza\n", i + 1);
		scanf("%d", pniz + i);
	}
	printf("Odaberite:\nv za ispis najveceg clana\nm za ispis najmanjeg clana\n");
	scanf(" %c", &c);
	switch (c) {
	case 'v':
		printf("Najveci clan je %d", minmax(pniz, n, veciod));
		break;
	case 'm':
		printf("Najmanji clan je %d", minmax(pniz, n, manjiod));
		break;
	default:
		printf("Greska!");
		return 1;
	}
	return 0;
}
