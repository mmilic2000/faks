#include <stdio.h>
#include <stdlib.h>
#include<string.h>

typedef struct
{
	double re; 
	double im;
}_complex;

void ispis(_complex* cplx, int n)
{
	if (cplx->im < 0) {
		printf("Kompleksni broj je: %lf%lfi\n", cplx->re, cplx->im);
	}
	else {
		printf("Kompleksni broj je: %lf+%lfi\n", cplx->re, cplx->im);
	}
	return;
}

int main()
{
	int i, n;
	_complex* cplx;

	printf("Koliko clanova zelis?\n");
	scanf("%d", &n);
	cplx = (_complex*)malloc(n * sizeof(_complex));
	printf("Unesite kompleksne brojeve: \n");
	for (i = 0; i < n; i++) {
		printf("Realni dio %d kompleksnog broja:\n", i + 1);
		scanf("%lf", &cplx[i].re);
		printf("Imaginarni dio %d kompleksnog broja:\n", i + 1);
		scanf("%lf", &cplx[i].im);
	}
	for (i = 0; i < n; i++) {
		ispis(cplx + i, n);
	}
	
	return 0;
}
